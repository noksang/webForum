<!-- แถบบนขวา -->
<div class="top-bar">
  <div class="right-buttons">
    <%= link_to "New Forum Thread", new_forum_path, class: "btn-primary" %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn-danger" %>
  </div>
</div>

<!-- หัวเรื่อง -->
<h1 class="page-title">Forums</h1>

<!-- การ์ดกระทู้ -->
<div class="forum-grid">
  <% @forums.each do |forum| %>
    <article class="forum-card">
      <h2 class="forum-title"><%= forum.thread %></h2>

      <div class="forum-actions">
        <%= link_to "View Forum Thread", forum_path(forum), class: "btn-ghost" %>
      </div>
    </article>
  <% end %>
</div>

<!-- CSS -->
<style>
    body {
        background: #fde9ef;
        font-family: "Poppins", "Noto Sans Thai", sans-serif;
    }

    .top-bar {
        display: flex;
        justify-content: flex-end;
        margin: 15px 20px;
    }

    .right-buttons a {
        margin-left: 8px;
    }

    .btn-primary {
        display: inline-block;
        padding: 8px 14px;
        border-radius: 8px;
        background: #b64a72;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
    }

    .btn-danger {
        display: inline-block;
        padding: 8px 14px;
        border-radius: 8px;
        background: #e74c3c;
        color: #fff;
        text-decoration: none;
        font-weight: 500;
    }

    .page-title {
        margin: 10px 20px;
        font-size: 28px;
        font-weight: 700;
        color: #5c3d2e;
    }

    .forum-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 20px;
        padding: 20px;
    }

    .forum-card {
        background: #fff6e9;
        border-radius: 12px;
        padding: 16px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
    }

    .forum-title {
        margin: 0 0 8px 0;
        font-size: 20px;
        font-weight: 600;
        color: #5c3d2e;
    }

    .btn-ghost {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 8px;
        border: 1px solid #d5d5d5;
        background: #fff;
        text-decoration: none;
        color: #444;
        font-size: 14px;
    }
</style>