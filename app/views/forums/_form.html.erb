<%= simple_form_for @forum do |f| %>
  <%= f.input :thread, label: 'Thread' %>
  <%= f.input :content, label: 'Content' %>
  <%# https://stackoverflow.com/questions/52488942/user-must-exist-in-rails-5 #%>
  <%# และมันก็ไม่ใช้ค่าด้านล่างด้วย เยี่ยมจริงๆ %>
  <%= f.input :user_id, as: :hidden, value: current_user.id %>
  <%= f.button :submit, class: "btn btn-custom btn-sm" %>
<% end %>