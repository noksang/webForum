<h2><%= @forum.thread %></h2>
<p><b>Posted by</b> <%= @forum.user.email %>, <%= time_ago_in_words(@forum.created_at) %> ago</p>
<p><%= @forum.content %></p>

<h3>Comments:</h3>
<%= render @forum.comments %>

<h3>Reply to the Thread:</h3>
<%= render 'comments/form' %>

<%= link_to "Back", root_path %>

<% if user_signed_in? %>
  <% if @forum.user_id == current_user.id %>
    <%= link_to "Edit", edit_forum_path(@forum) %>
    <%= link_to "Delete", forum_path(@forum),
                data: {"turbo-method": :delete, turbo_confirm: "Are you sure to delete this thread?"} %>
  <% end %>
<% end %>
